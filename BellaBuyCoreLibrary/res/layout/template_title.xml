<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_hight"
    android:background="@drawable/img_title_bg"
    android:paddingRight="10dip">

    <Button
        android:id="@id/title_left_btn"
        android:layout_width="32dip"
        android:layout_height="30dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/d_title_back" />

    <Button
        android:id="@+id/title_right_btn"
        android:layout_width="25dip"
        android:layout_height="23dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/edit"
        android:visibility="gone" />

    <Button
        android:id="@+id/order_passport_photo"
        android:layout_width="27dip"
        android:layout_height="22dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/photo"
        android:visibility="gone" />

    <Button
        android:id="@+id/title_photo_pick"
        android:layout_width="wrap_content"
        android:layout_height="28dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/c_but_white_bg"
        android:gravity="center"
        android:minWidth="45dip"
        android:padding="5dip"
        android:text="@string/confirm"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        android:visibility="gone" />

    <com.bellabuy.widgets.SFBaseTextView
        android:id="@+id/review_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/text_black"
        android:textSize="16.0sp"
        android:visibility="gone" />

    <!-- <ImageView
        android:id="@+id/img_like"
        android:layout_width="27dip"
        android:layout_height="27dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:src="@drawable/img_title_like"
        android:visibility="gone" />

    <com.bellabuy.widgets.SFBubbleButtonView
        android:id="@+id/bubble_like"
        style="@style/menu_bubble_style"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dip"
        android:layout_marginTop="10dip"
        android:visibility="gone" />
-->
    <ImageView
        android:id="@+id/img_shopping_card"
        android:layout_width="27dip"
        android:layout_height="27dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dip"
        android:src="@drawable/navigation_cart"
        android:visibility="gone" />

    <com.bellabuy.widgets.SFBubbleButtonView
        android:id="@+id/bubble_shopping_cart"
        style="@style/menu_bubble_style"
        android:layout_alignParentRight="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/title_right_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="27dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/c_but_red_bg_2"
        android:textColor="@color/app_bg"
        android:visibility="gone" />

    <com.bellabuy.widgets.SFBaseTextView
        android:id="@id/title_text"
        style="@style/layout_wrap_fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="20"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/grey6"
        android:textSize="15sp"
        test:font_name="HELVETICANEUELTSTD-LTCN.OTF" />


    <EditText
        android:id="@+id/title_search"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="6dip"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@id/img_shopping_card"
        android:background="@drawable/c_but_white_cornerbg"
        android:drawableLeft="@drawable/img_search_icon"
        android:drawablePadding="5dip"
        android:longClickable="false"
        android:hint="@string/menu_right_search_hint"
        android:imeOptions="actionSearch"
        android:focusable="false"
        android:paddingLeft="5dip"
        android:singleLine="true"
        android:textSize="14sp"
        android:visibility="gone" />
</RelativeLayout>